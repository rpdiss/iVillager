<Window x:Class="iVillager.ColorPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wybierz kolor" Height="280" Width="320"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1a1a2e">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="R" Width="24" Foreground="#e8e8e8" VerticalAlignment="Center"/>
            <Slider x:Name="SliderR" Minimum="0" Maximum="255" Value="0" VerticalAlignment="Center" Width="200" ValueChanged="OnSliderChanged"/>
            <TextBlock x:Name="TextR" Text="0" Width="32" Foreground="#a0a0a0" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="G" Width="24" Foreground="#e8e8e8" VerticalAlignment="Center"/>
            <Slider x:Name="SliderG" Minimum="0" Maximum="255" Value="255" VerticalAlignment="Center" Width="200" ValueChanged="OnSliderChanged"/>
            <TextBlock x:Name="TextG" Text="255" Width="32" Foreground="#a0a0a0" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="B" Width="24" Foreground="#e8e8e8" VerticalAlignment="Center"/>
            <Slider x:Name="SliderB" Minimum="0" Maximum="255" Value="0" VerticalAlignment="Center" Width="200" ValueChanged="OnSliderChanged"/>
            <TextBlock x:Name="TextB" Text="0" Width="32" Foreground="#a0a0a0" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,12">
            <TextBlock Text="A" Width="24" Foreground="#e8e8e8" VerticalAlignment="Center"/>
            <Slider x:Name="SliderA" Minimum="0" Maximum="255" Value="120" VerticalAlignment="Center" Width="200" ValueChanged="OnSliderChanged"/>
            <TextBlock x:Name="TextA" Text="120" Width="32" Foreground="#a0a0a0" VerticalAlignment="Center"/>
        </StackPanel>
        <Border Grid.Row="4" Background="#16213e" CornerRadius="6" Margin="0,0,0,12" Padding="8">
            <Border x:Name="PreviewBorder" Background="#FF0000" CornerRadius="4"/>
        </Border>
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Anuluj" Click="Cancel_Click" Padding="16,6" Margin="0,0,8,0"/>
            <Button Content="OK" Click="Ok_Click" Padding="16,6"/>
        </StackPanel>
    </Grid>
</Window>
