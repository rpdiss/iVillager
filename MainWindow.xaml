<Window x:Class="iVillager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iVillager"
        mc:Ignorable="d"
        Title="iVillager" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        PreviewKeyDown="Window_PreviewKeyDown">
    <Grid Background="#1a1a2e">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="24">
            <Button x:Name="StartStopButton"
                    Content="Start"
                    Click="StartStopButton_Click"
                    Padding="24,12"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Cursor="Hand"
                    Background="#0d7377"
                    Foreground="#e8e8e8"
                    BorderBrush="#14a3a8"
                    BorderThickness="2"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,20">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#14a3a8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0a5c5f"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Border Background="#16213e"
                    BorderBrush="#0f3460"
                    BorderThickness="2"
                    CornerRadius="8"
                    Padding="20,14"
                    HorizontalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Ctrl + Page Up"
                               Foreground="#e8e8e8"
                               FontSize="16"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Ten skrót otwiera overlay. W overlay ten sam skrót zapisuje region i zamyka overlay."
                               Foreground="#a0a0a0"
                               FontSize="12"
                               Margin="0,8,0,0"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"
                               MaxWidth="280"
                               TextAlignment="Center"/>
                </StackPanel>
            </Border>
            <TextBlock x:Name="DetectedIconText"
                       Text=""
                       Foreground="#7fdbda"
                       FontSize="12"
                       Margin="0,16,0,0"
                       HorizontalAlignment="Center"
                       Visibility="Collapsed"/>
        </StackPanel>
        <Border Grid.Row="1" Background="#0f0f23" Padding="16,12" Margin="0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Skrót Start/Stop (w grze):"
                           Foreground="#a0a0a0"
                           VerticalAlignment="Center"
                           Margin="0,0,8,0"/>
                <TextBox x:Name="HotkeyInput"
                         Width="160"
                         Padding="8,4"
                         VerticalAlignment="Center"
                         ToolTip="np. Ctrl+Shift+F1"/>
                <Button x:Name="RebindHotkeyButton"
                        Content="Rebind"
                        Click="RebindHotkeyButton_Click"
                        Padding="12,4"
                        Margin="8,0,0,0"
                        VerticalAlignment="Center"/>
                <Button Content="Zapisz"
                        Click="SaveHotkeyButton_Click"
                        Padding="12,4"
                        Margin="8,0,0,0"
                        VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
